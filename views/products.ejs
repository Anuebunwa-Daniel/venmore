<%- include('layout/user-header.ejs') %>

    <!-- Breadcrumb -->
    <div class="container mt-5 pt-5">
        </nav>
    </div>

     <!-- Product Header -->
    <section class="category-header">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h1>
                        All products
                    </h1>
                    <h4 class="text-muted">Our products are the best in Quality and durations </h4>
                </div>
            </div>
        </div>
    </section>

    <div class="container">
    <!-- Products Grid -->
    <div class="row g-4">

        <% if (product.length > 0) { %>
            <% product.forEach(product => { %>

                <div class="col-lg-3 col-md-6"> <!-- 3 per row -->
                    <div class="product-card">

                        <div class="product-img position-relative">
                            <span class="product-badge">Bestseller</span>
                            <img src="<%= product.image %>" alt="<%= product.productName %>" class="img-fluid">
                        </div>

                        <div class="p-3">
                            <div class="product-rating">
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <span class="text-muted ms-1">(342)</span>
                            </div>

                            <h5 class="product-title"><%= product.productName %></h5>
                            <p class="text-muted small mb-2"><%= product.desc %></p>

                            <div class="d-flex justify-content-between align-items-center">
                                <div class="product-price">(&#x20A6;)<%= product.price %></div>

                                <button class="btn btn-primary btn-sm add-to-cart"
                                    data-id="<%= product._id %>"
                                    data-name="<%= product.productName %>"
                                    data-price="<%= product.price %>"
                                    data-image="<%= product.image %>">
                                    Add to Cart
                                </button>
                            </div>
                        </div>

                    </div>
                </div>

            <% }) %>
        <% } else { %>

            <h3>No products available i yet.</h3>

        <% } %>

    </div>